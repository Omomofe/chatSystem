<%- include('partials/header') %>

  <div class="blur"></div>
  <div id="container">

    <form action="/register" method="post" >
      <h1>Sign Up</h1>
      <div class="mb-3 drop">

         <div class="name">
           <input type="text" name="firstName" id="Name" placeholder="Firstname">

           <input type="text" name="lastName" placeholder="Lastname">
         </div>
      </div>
      <div class="mb-3 drop">

        <input type="email" name="username" id="RegisterEmail" placeholder="Email" aria-describedby="emailHelp">
      </div>
      <div class="mb-3 drop">
        <input type="password" class="form-control" name="password" placeholder="Password" id="exampleInputPassword1">
      </div>
      <button type="submit" class="btn btn-primary">Enter Room </button>
    </form>
    <p> Already have an account? <a href="/login">login</a> instead.</p>
  </div>
  
<%- include('partials/footer') %>